

<div class="row">
  <section class="span8 shop_front">
    <%= render 'shop_info', shop: @shop %>
    
  </section>
  <section class="span4">
    <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{u(@shop.adress)}&zoom=17&size=400x400&sensor=false&markers=#{u(@shop.adress)}" %>
  </section>
</div>
<div class="row">
  <div class="span12">
    <% if user_signed_in? and current_user.own? @shop %>
      <%= link_to "Modifier mon Snack", edit_shop_path(@shop), class: 'btn btn-large' %>
      <%= link_to "Ajouter un produit", new_product_path, class: 'btn btn-primary btn-large' %>
    <% end %>
  </div>
</div>

<div class="row">
  <%= render @products %>
</div>
